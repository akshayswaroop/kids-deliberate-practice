{
  "name": "kids_deliberate_practice",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npx playwright test --config=playwright.config.ts",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:unit:watch": "vitest --config vitest.config.unit.ts",
    "test:ui": "vitest --config vitest.config.unit.ts --ui",
    "test:report": "vitest run --config vitest.config.unit.ts --reporter=html",
    "test:open-report": "open ./.reports/vitest/index.html",
    "postinstall": "husky install",
    "validate": "./scripts/validate-dev.sh",
    "check-runtime": "node scripts/check-runtime-errors.js",
    "dev:safe": "npm run build && npm run test && npm run dev",
    "predeploy": "npm run build",
    "deploy": "npm run deploy:gh",
    "deploy:gh": "npm run build && cp dist/index.html dist/404.html && npx gh-pages -d dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@microlink/react-json-view": "^1.27.0",
    "@reduxjs/toolkit": "^2.9.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "sarvamai": "^0.1.9",
    "storybook": "^9.1.10"
  },
  "homepage": "https://akshayswaroop.github.io/kids-deliberate-practice/",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/seedrandom": "^3.0.8",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.10",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "seedrandom": "^3.0.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
